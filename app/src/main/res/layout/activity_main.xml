<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">
    <!--重点关注-->
    <RelativeLayout
        android:layout_marginTop="@dimen/m16"
        android:id="@+id/rl_my_focus"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_my_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/m18"
            android:layout_marginTop="@dimen/m8"
            android:src="@drawable/img_my_focusable"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_my_focus"
            android:layout_centerHorizontal="true"
            android:text="重点关注"
            android:textColor="@color/main_text_title_color"
            android:textSize="@dimen/t20"/>

        <TextView
            android:id="@+id/tv_my_focus"
            style="@style/badge_style"
            android:textSize="@dimen/m16"
            android:layout_toRightOf="@+id/iv_my_focus"
            android:layout_marginTop="@dimen/m2"/>

    </RelativeLayout>
    <!--我的关注-->
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/rl_my_ekong"
        android:layout_marginTop="@dimen/m16"
        android:layout_below="@+id/rl_my_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_my_ekong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/m8"
            android:src="@drawable/my_focusable"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_my_ekong"
            android:layout_centerHorizontal="true"
            android:text="我的关注"
            android:textColor="@color/main_text_title_color"
            android:textSize="@dimen/t20"/>

        <TextView
            android:id="@+id/tv_my_ekong_tips"
            style="@style/badge_style"
            android:layout_toRightOf="@+id/iv_my_ekong"
            android:layout_marginTop="@dimen/m18"
            android:text="11"/>

    </RelativeLayout>

</RelativeLayout>